
modules = ["nodejs-20"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run start:prod"]
deploymentTarget = "cloudrun"
ignorePorts = false
build = ["sh", "-c", "npm run build:all"]

[env]
PORT = "3000"
NODE_ENV = "production"

[processes]
dev = "npm run dev"
seed-db = "node ./scripts/seed-db.js"
backend = "node server.js"
frontend = "npx expo start --web"

[unitTest]
language = "nodejs"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 4584120

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

